{
    "comments": true, // for debugging & jsdocs
    "presets": [
        "@babel/preset-env",
        "@babel/typescript"
    ],
    "targets": {
        "node": 16,
        "browsers": [ "> 2%" ]  // target modern browsers and ES6
    },
    "env": {
        "development": {
            "plugins": [ "istanbul" ]   // for code coverage
        },
        "production": {
            "comments": false,
            "targets": {
                // larger feature set for prod bundle
                "browsers": [
                    "> 2%",
                    "ie 11",
                    "not op_mini all"
                ]
            }
        }
    }
}